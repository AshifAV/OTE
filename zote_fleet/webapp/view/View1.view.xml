<mvc:View
    controllerName="zotefleet.controller.View1"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:layout="sap.ui.layout"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
    displayBlock="true"
>
    <App>
        <pages>
            <Page
                title="Update Registration"
                showNavButton="false"
                class="sapUiNoContentPadding"
            >
                <content>
                    <!-- Compact Container -->
                    <VBox alignItems="Center" class="sapUiMediumMargin">
                        <Panel
                            headerText="Update Vehicle Registration"
                            expandable="false"
                            width="450px"
                            class="modern-panel"
                        >
                            <content>
                                <VBox class="sapUiSmallMargin">
                                    <!-- Equipment Selection -->
                                    <VBox class="sapUiTinyMarginBottom">
                                        <Label text="Equipment" required="true" 
                                               design="Bold" class="sapUiTinyMarginBottom"/>
                                        <HBox alignItems="Center">
                                            <Input
                                                id="idEquipment"
                                                valueHelpRequest=".onEquipmentValueHelp"
                                                valueHelpOnly="true"
                                                showValueHelp="true"
                                                width="200px"
                                                placeholder="Select equipment"
                                                class="sapUiSmallMarginEnd compact-input"
                                            />
                                            <core:Icon
                                                src="sap-icon://value-help"
                                                size="1.25rem"
                                                color="#0a6ed1"
                                                class="sapUiTinyMarginBegin"
                                            />
                                        </HBox>
                                        <Text
                                            id="idEquipmentDescription"
                                            text=""
                                            wrapping="true"
                                            class="sapUiTinyMarginTop description-compact"
                                        />
                                    </VBox>

                                    <!-- Fleet Details in Compact Grid -->
                                    <layout:Grid
                                        defaultSpan="XL12 L12 M12 S12"
                                        hSpacing="0.5"
                                        vSpacing="0.5"
                                        class="sapUiTinyMarginTop"
                                    >
                                        <!-- VIN -->
                                        <VBox>
                                            <Label text="VIN" class="field-label"/>
                                            <Input id="idVIN" editable="false" 
                                                   width="100%" class="compact-input readonly"/>
                                        </VBox>

                                        <!-- Chassis -->
                                        <VBox>
                                            <Label text="Chassis" class="field-label"/>
                                            <Input id="idChassis" editable="false" 
                                                   width="100%" class="compact-input readonly"/>
                                        </VBox>

                                        <!-- Plate Number -->
                                        <VBox>
                                            <Label text="Plate Number" required="true" class="field-label"/>
                                            <Input id="idPlateNumber" 
                                                   width="100%"
                                                   placeholder="Enter plate number"
                                                   class="compact-input"/>
                                        </VBox>
                                    </layout:Grid>

                                    <!-- Buttons - Compact -->
                                    <HBox justifyContent="End" class="sapUiSmallMarginTop">
                                        <Button
                                            id="updateButton"
                                            text="Update"
                                            press=".onUpdatePress"
                                            type="Accept"
                                            width="100px"
                                            icon="sap-icon://save"
                                            class="sapUiTinyMarginEnd compact-button"
                                        />
                                        <Button
                                            text="Clear"
                                            press=".onClearPress"
                                            width="100px"
                                            icon="sap-icon://clear-all"
                                            class="compact-button"
                                        />
                                    </HBox>
                                </VBox>
                            </content>
                        </Panel>

                        <!-- Status Message Area -->
                        <VBox id="statusArea" visible="false" 
                              class="sapUiTinyMarginTop status-message">
                            <MessageStrip
                                id="statusMessage"
                                type="Information"
                                showIcon="true"
                                showCloseButton="true"
                                class="sapUiTinyMargin"
                            />
                        </VBox>
                    </VBox>
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>